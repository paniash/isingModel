            "source": [
                "#1d ising model at a very hi temperature\n",
                "import numpy as np\n",
                "import matplotlib.pyplot as plt\n",
                "from sklearn import linear_model\n",
                "\n",
                "#length of our lattice\n",
                "d=100\n",
                "#no of 1d ising models\n",
                "n=100\n",
                "\n",
                "#defining our lattice\n",
                "l=np.random.choice([-1, 1], size=(n,d))\n",
                "\n",
                "#array to store the labels\n",
                "label=np.zeros(n)\n",
                "\n",
                "#fn to return the energy of our lattice\n",
                "def energy(l):\n",
                "    e=0\n",
                "    j=1\n",
                "    #our energy assumes periodic boundary conditions\n",
                "    for i in range(l.size-1):\n",
                "        \n",
                "        e+=-j*l[i]*(l[i-1]+l[i+1])\n",
                "    \n",
                "    e+=-j*l[l.size-1]*(l[l.size-2]+l[0])\n",
                "    \n",
                "    return e\n",
                "\n",
                "\n",
                "#creating the labels\n",
                "for i in range(n):\n",
                "    label[i]=energy(l[i])\n",
                "\n",
                "\n",
                "train=l[:int(n/2)]\n",
                "test=l[int(n/2):]\n",
                "\n",
                "train_label=label[:int(n/2)]\n",
                "test_label=label[int(n/2):]\n",
                "\n",
                "#data generated!!\n",
                "\n",
                "#setting up our ML algos\n",
                "ols=linear_model.LinearRegression()\n",
                "ridge=linear_model.Ridge()\n",
                "lasso = linear_model.Lasso()\n",
                "\n",
                "#needed for training data: computing the outer product of l_i\n",
                "# states=np.einsum('...i,...j->...ij', states, states)\n",
            ],
